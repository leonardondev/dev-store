{
  "extends": [
    "@rocketseat/eslint-config/next",
    "plugin:tailwindcss/recommended",
    "next/core-web-vitals",
    "next/typescript"
  ],
  "plugins": [
    "simple-import-sort"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "@typescript-eslint/no-namespace": "off"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
